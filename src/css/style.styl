// Import all partials
@require './_*.styl'

/* Base Styles   ... adapted from getskeleton.com
–––––––––––––––––––––––––––––––––––––––––––––––––– */
/* NOTE
html is set to 62.5% so that all the REM measurements throughout Skeleton
are based on 10px sizing. So basically 1.5rem = 15px :) */
html {
  font-size: 62.5%; }
body {
  margin:0;
  font-size: 1.5em;
  line-height: 1.6;
  font-weight: 400;
  font-family: Calibri, sans-serif;
  background-color:#121212;
  color:snow;
}

/* Layout
–––––––––––––––––––––––––––––––––––––––––––––––––– */
* { box-sizing: border-box; }

.welcome-row
  display: flex
  flex-direction: row
  justify-content: space-between

.login-row
  display: flex
  flex-direction: column
  justify-content: space-between

.login-row > button 
  margin: 10px 0

.welcome {
  margin:0 auto;
  width:100%;
  background-color:rgb(46, 72, 107, 0.7);
}

.welcome-byline {
  position:relative;
  top:1rem;
}

.welcome-byline > a{
color:snow;
}


.container {
  min-width: 300px;
  max-width: 900px;
  margin:auto;
  padding: 0 10px;
}

.login > * {
  margin: 10px 0;
}

button {
  height: 2.8rem;
  padding: 0 1rem;
  color: snow;
  text-align: center;
  font-size: 1.1rem;
  font-weight: 600;
  letter-spacing: .1rem;
  text-transform: uppercase;
  text-decoration: none;
  white-space: nowrap;
  background-color: transparent;
  border: 1px solid #ccc;
  border-radius: 4px;
  cursor: pointer;
}

.buttons-row {
  width:300px;
  margin:auto;
  padding-bottom: 1rem;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}

.buttons-row > * {
  margin-top: .5rem;
}

.btn-modal {
  margin-top: 1.3rem;
}

.cards-div
  padding-inline-start:0

.card 
  position:relative
  margin: 1rem 0
  padding: .5rem .1rem .5rem 1rem
  color: snow
  border-radius: 8px
  border: 1px solid #aaa

.card-btn
  font-size: 2rem
  font-weight: 600
  height: 3rem
  padding: 0 .8rem
  width: 3rem

.card-delete-btn
  display: block
  position: absolute
  top: 5px
  right: 5px
  border-color:#6c6c6c

.card-title
  margin-right: 40px

.card > p
  display:inline-block
  overflow-wrap:break-word

.card-link
  color:snow
  cursor: pointer

.bold
  font-weight: bold;

.card-keywords
  color:#69C5EC;

.card-findings 
  color:#FDE95C

.card-title
  color:salmon


.abstract-toggle
  color:#86CC5F
  cursor:pointer

/* Typography  ... adapted from getskeleton.com
–––––––––––––––––––––––––––––––––––––––––––––––––– */
h1, h2, h3, h4, h5, h6 {
  margin-top: 0;
  margin-bottom: 0;
  font-weight: 300; }
h1 { font-size: 4.0rem; line-height: 1.2;  letter-spacing: -.1rem;}
h2 { font-size: 3.6rem; line-height: 1.25; letter-spacing: -.1rem; }
h3 { font-size: 3.0rem; line-height: 1.3;  letter-spacing: -.1rem; }
h4 { font-size: 2.4rem; line-height: 1.35; letter-spacing: -.08rem; }
h5 { font-size: 1.8rem; line-height: 1.5;  letter-spacing: -.05rem; }
h6 { font-size: 1.5rem; line-height: 1.6;  letter-spacing: 0; }

/* Larger than phablet */
@media (min-width: 550px) {
  h1 { font-size: 5.0rem; }
  h2 { font-size: 4.2rem; }
  h3 { font-size: 3.6rem; }
  h4 { font-size: 3.0rem; }
  h5 { font-size: 2.4rem; }
  h6 { font-size: 1.5rem; }
  .buttons-row, .welcome-row, .login-row {
    flex-direction: row;
  }
  .buttons-row {
    width:100%}
  .btn-logout {
    margin-left:2rem;
  }
}

p { 
  line-height:1.3;
  margin: 0; 
}

/* Forms   ... adapted from getskeleton.com
–––––––––––––––––––––––––––––––––––––––––––––––––– */
input[type="text"],
textarea,
select {
  box-shadow: none;
  height: 3rem;
  padding: 0 .5rem;
  border: 1px solid #D1D1D1;
  border-radius: 4px;
  width:100%;
  background-color: snow;
  color:black;
}
input[type="text"],
textarea {
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none; }
textarea {
  min-width:100%;
  max-width:100%;
  min-height: 55px;
  padding-top:.5rem;
  padding-bottom:.5rem;
}
input[type="text"]:focus,
textarea:focus,
select:focus {
  border: 1px solid #33C3F0;
  outline: 0; }
