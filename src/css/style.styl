/* Base Styles 
–––––––––––––––––––––––––––––––––––––––––––––––––– */
/* NOTE
html is set to 62.5% so that all the REM measurements throughout Skeleton
are based on 10px sizing. So basically 1.5rem = 15px :) */
html
  font-size: 62.5%
body
  margin:0
  font-size: 1.5em
  line-height: 1.6
  font-weight: 400
  font-family: Calibri, sans-serif
  background-color:#121212
  color:snow

// * { box-sizing: border-box; }

/* Layout
–––––––––––––––––––––––––––––––––––––––––––––––––– */

// define responsive breakpoint variable
small-width = 500px
phone-width = 570px
desk-width  = 700px
// dark theme color layers per Material Design best practices
welcomeBlue = rgb(46, 72, 107, 0.7)
formBlue = rgb(46, 72, 107, 1.0)
layer0 = rgba(255,255,255,0)
layer1 = rgba(255,255,255,.07)
layer2 = rgba(255,255,255,.09)
layer3 = rgba(255,255,255,.12)
layer4 = rgba(255,255,255,.15)
layer5 = rgba(255,255,255,.18)

.container
  min-width: 300px
  max-width: 1000px
  margin:auto
  padding: 0 1rem

.welcome
  margin:0 auto
  width:100%
  background-color: welcomeBlue

.welcome-row
  padding-top:.5rem
  display: flex
  flex-direction: row
  justify-content: space-between
  @media (min-width: phone-width)
    padding-top:1rem
    padding-bottom:.5rem

.welcome-byline
  position:relative
  top:1rem
  a
    color:snow


.login-row
  display: flex
  flex-direction: column
  justify-content: space-between

.login-row > button 
  margin: 10px 0

.login-btn
  height: 4.5rem

.login > *
  margin: 10px 0

button
  height: 3rem
  padding: 0 1rem
  color: snow
  text-align: center
  font-size: 1.3rem
  font-weight: 600
  letter-spacing: .1rem
  text-transform: uppercase
  text-decoration: none
  white-space: nowrap
  background-color: layer3
  // border: 1px solid #ccc
  border: none
  border-radius: 4px
  cursor: pointer
  transition-duration:200ms
  &:hover
    background-color: layer5
  @media (max-width: small-width)
    height: 3rem;
  @media (min-width: phone-width)
    height: 3.2rem

.buttons-row
  margin:auto
  padding-bottom: 1rem
  display:flex
  justify-content: space-between
  & > *
    margin-top: .5rem
  @media (max-width: desk-width)
    flex-direction: column-reverse
    width:100%
    & > *
      margin-top: .5rem

// modal form
.modal
  // display: none; /* Hidden by default */
  // display:grid
  position: fixed /* Stay in place */
  z-index: 1 /* Sit on top */
  padding-top: 30vh /* Location of the box */
  left: 0;
  right: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.8); /* Black w/ opacity */

.modal-form
  padding 30px
  border-radius: 5px
  margin: auto
  width: 60%
  min-width: 300px
  background-color: formBlue

.btn-modal-form
  margin-top: 1.3rem

.cards-div
  padding-inline-start:0

.card 
  position:relative
  margin: 1rem 0
  padding: .5rem .5rem .5rem 1rem
  color: snow
  border-radius: .8rem
  background-color:layer2
  & > p
    display:inline-block
    overflow-wrap:break-word

.card-btn
  font-size: 2rem
  font-weight: 600
  height: 3rem
  padding: 0 .8rem
  width: 3rem

.card-delete-btn
  display: block
  position: absolute
  top: 5px
  right: 5px
  border:none
  font-weight:100
  background-color:layer1
  &:hover
    background-color: layer2

.card-title
  font-family: Cambria, Times, serif
  margin-right: 3.2rem
  color:salmon
  letter-spacing: .2px

.card-link
  text-decoration: none
  // color:snow
  // cursor: pointer

.bold
  font-weight: bold;

.card-keywords
  color:#69C5EC;

.card-findings 
  color:#FDE95C


.abstract-toggle
  color:#86CC5F
  cursor:pointer
  background-color: layer1
  padding:2px 1rem
  border-radius:5px
  // showing abstract button inline with authors
  display: inline-block
  position: relative
  left: 1rem
  // showing abstract button under delete button
  // position: absolute
  // top: 6rem
  // right: 5px
  &:hover
    background-color: layer2


/* Typography
–––––––––––––––––––––––––––––––––––––––––––––––––– */
h1, h2, h3, h4, h5, h6, p {
  margin-top: 0.2rem;
  margin-bottom: 0.2rem;
  font-weight: 300; 
}
h1 { 
  font-size: 4.0rem; 
}
h2 { 
  font-size: 3.6rem; 
}
h3 { 
  font-size: 3.0rem; 
}
h4 { 
  font-size: 2.4rem; 
}
h5 { 
  font-size: 1.8rem; 
}
h6 { 
  font-size: 1.8rem; 
}
p { 
}

/* Larger than breakpoint */
@media (min-width: phone-width) {
  h1 { font-size: 5.0rem; }
  h2 { font-size: 4.2rem; }
  h3 { font-size: 3.2rem; }
  h4 { font-size: 3.0rem; }
  h5 { font-size: 2.4rem; }
  h6 { font-size: 1.8rem; }
  .buttons-row, .welcome-row, .login-row {
    flex-direction: row;
  }
  .buttons-row {
    width:100%}
  .btn-logout {
    margin-left:2rem;
  }
}

/* Forms 
–––––––––––––––––––––––––––––––––––––––––––––––––– */
input[type="text"],
textarea,
select {
  box-shadow: none;
  height: 3rem;
  padding: 0 .5rem;
  border: 1px solid #D1D1D1;
  border-radius: 4px;
  width:100%;
  background-color: snow;
  color:black;
}
input[type="text"],
textarea {
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none; }
textarea {
  min-width:100%;
  max-width:100%;
  min-height: 55px;
  padding-top:.5rem;
  padding-bottom:.5rem;
}
input[type="text"]:focus,
textarea:focus,
select:focus {
  border: 1px solid #33C3F0;
  outline: 0; }
fieldset {
  padding: 0;
  border-width: 0; }
label > .label-body {
  display: inline-block;
  margin-left: 1rem;
  font-weight: normal; }
