anim-time = 500ms

.card-enter
  transform-origin:top
  transform: scaleY(0)
  opacity:0

.card-enter-active
  transform: scaleY(1)
  opacity:1
  transition: 
    transform anim-time,
    opacity anim-time

.card-exit
  transform-origin:top
  transform: scaleY(1)
  opacity:1

.card-exit-active
  transform:scaleY(0)
  opacity:0
  transition: 
    transform anim-time, 
    opacity anim-time

.cards-div div.card-exit {
  height:0;
}

.cards-div div.card-exit-active,
.cards-div div.card-exit-done {
  position:absolute;
}

@keyframes cardslide
  100% {transform: none}

/* MODAL FADE FOR LOGIN  */
.modal-fade {
  -webkit-animation-name: fade;
  -webkit-animation-duration: anim-time;
  animation-name: fade;
  animation-duration: anim-time;
}

@-webkit-keyframes fade {
  from {opacity: 0;}
  to {opacity: 1;}
}
@keyframes fade {
  from {opacity: 0;}
  to {opacity: 1;}
}